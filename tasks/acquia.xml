  <import file="vendor/palantirnet/the-build/tasks/acquia.xml" />

  @see defaults.properties.yml

  Copyright 2016, 2018 Palantir.net, Inc.
  -->

<project name="acquia" default="acquia-status">

    <!-- Provide the <acquiaGetBackup /> task. -->
    <taskdef name="acquiaGetBackup" classname="TheBuild\Acquia\GetLatestBackup" />

    <fail unless="projectname" />
    <fail unless="build.dir" />
    <fail unless="build.env" />


    <target name="acquia-get-backup">
        <getAcquiaBackup dir="${acquia.backups}" realm="${acquia.realm}" site="${acquia.site}" env="${acquia.env}" credentialsFile="${acquia.cloud.conf}" propertyName="drupal.load_db.file" />
    </target>


</project>
